%section.col-lg-12.event-bet
  %header.col-lg-12.event-header
    %h2.col-xs-10
      %span.event-team
        = bet.team.name
      %br
      %span.bet-price
        = bet.odds
    = link_to bet_path(bet), method: :delete, remote: true,
      class: 'pull-right event-remove' do
      %span.glyphicon.glyphicon-remove{'aria-hidden' => true}
  .col-lg-12.event-body
    %p.col-lg-12.league-time
      %span.pull-left
        = bet.game_line.league.abbreviation
      %time.pull-right
        = l(bet.game_line.date)
        @
        = bet.game_line.time.to_s(:time)
  %footer.col-lg-12.event-footer
    = form_for bet do |f|
      %figure.col-lg-6.col-sm-12.pull-left
        = f.label :risk
        = f.number_field :risk, step: 0.01, class: 'col-lg-12 bet-risk',
                         data: { odds: bet.odds, bet: bet.id }
      %figure.col-lg-6.col-sm-12.pull-right
        %label
          Win
        %input.col-lg-12.bet-win{type: 'number', step: 0.01, disabled: true, data: { bet: bet.id }}
  .clearfix
