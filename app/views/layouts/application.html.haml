!!!
%html
  %head
    %meta{charset: 'utf-8'}
    %meta{content: 'IE=edge', 'http-equiv' => 'X-UA-Compatible'}
    %meta{content: 'width=device-width, initial-scale=1', name: 'viewport'}
    %meta{content: '', name: 'description'}
    %meta{content: '', name: 'author'}
    %title Uptown Sports Dream

    = stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track' => true
    -#= stylesheet_link_tag 'https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css', media: 'all'

    = javascript_include_tag 'application', 'data-turbolinks-track' => true

    = csrf_meta_tags

  %body
    #wrapper
      = render 'application/navigation'

      #page-wrapper
        .container-fluid
          .col-lg-9
            - if notice
              .alert.alert-success{role: 'alert'}
                = button_tag class: 'close', data: { dismiss: 'alert' },
                             'aria-label' => 'Close' do
                  %span{'aria-hidden': 'true'}
                    &times;
                = notice

            - if alert
              .alert.alert-danger{role: 'alert'}
                = button_tag class: 'close', data: { dismiss: 'alert' },
                             'aria-label' => 'Close' do
                  %span{'aria-hidden': 'true'}
                    &times;
                = alert

            = render 'users/empty_balance' if current_user.try(:empty_balance?)

            = yield

            = render 'application/footer'

          .col-lg-3
            = render 'application/sidepanel'
